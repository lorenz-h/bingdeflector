{

    "manifest_version": 2,
    "name": "BingDeflector",
    "version": "1.0",
  
    "description": "Redirect Bing search queries (e.g. from Cortana or the Visual Studio Debugger) to Google.",

    "icons": {
        "48": "icons/deflect-48.png",
        "96": "icons/deflect-96.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.bing.com/search?*"],
        "js": ["bingdeflector.js"],
        "run_at": "document_start"
      }
    ]
  
  }